{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@adaptly/*": ["./source/*"]
        }
    },
    "include": ["source"],
    "exclude": ["node_modules", "tmp"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
